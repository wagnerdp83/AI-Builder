---
import { ChevronRight, Menu, X } from '@lucide/astro';

const headline = "Calculate Your Untapped Revenue"
const subheadline = "Adjust the sliders below to see how much more you could earn with a high-converting landing page."
const ctaText = "Get Your Custom Plan"
const disclaimer = "Results based on average client performance. Actual gains may vary."
const monthlyVisitorsLabel = "Monthly Visitors"
const conversionRateLabel = "Current Conversion Rate"
const averageOrderValueLabel = "Average Order Value"
const outputText = "With a 2% lift, you'd earn"
const outputSuffix = "more per month.";
---

<section class="py-16 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12">
      <h2 class="text-3xl font-bold text-gray-900 mb-4 animate-fade-in">{headline}</h2>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto animate-fade-in animation-delay-200">{subheadline}</p>
    </div>

    <div class="bg-blue-50 rounded-lg p-8 mb-12">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-8">
        <div>
          <label for="monthly-visitors" class="block text-sm font-medium text-gray-700 mb-2">{monthlyVisitorsLabel}</label>
          <input type="range" id="monthly-visitors" min="1000" max="100000" value="50000" class="w-full h-2 bg-blue-200 rounded-lg appearance-none cursor-pointer">
          <div class="flex justify-between mt-2">
            <span class="text-sm text-gray-500">1K</span>
            <span class="text-sm text-gray-500">100K</span>
          </div>
          <div class="text-center mt-2">
            <span id="monthly-visitors-value" class="text-lg font-medium text-blue-800">50,000</span>
          </div>
        </div>

        <div>
          <label for="conversion-rate" class="block text-sm font-medium text-gray-700 mb-2">{conversionRateLabel}</label>
          <input type="range" id="conversion-rate" min="0.5" max="10" step="0.1" value="2" class="w-full h-2 bg-blue-200 rounded-lg appearance-none cursor-pointer">
          <div class="flex justify-between mt-2">
            <span class="text-sm text-gray-500">0.5%</span>
            <span class="text-sm text-gray-500">10%</span>
          </div>
          <div class="text-center mt-2">
            <span id="conversion-rate-value" class="text-lg font-medium text-blue-800">2.0%</span>
          </div>
        </div>

        <div>
          <label for="average-order-value" class="block text-sm font-medium text-gray-700 mb-2">{averageOrderValueLabel}</label>
          <input type="range" id="average-order-value" min="20" max="500" value="100" class="w-full h-2 bg-blue-200 rounded-lg appearance-none cursor-pointer">
          <div class="flex justify-between mt-2">
            <span class="text-sm text-gray-500">$20</span>
            <span class="text-sm text-gray-500">$500</span>
          </div>
          <div class="text-center mt-2">
            <span id="average-order-value-value" class="text-lg font-medium text-blue-800">$100</span>
          </div>
        </div>
      </div>

      <div class="text-center">
        <div class="text-2xl font-bold text-blue-800 mb-4">
          <span>{outputText} </span>
          <span id="roi-value" class="text-green-600">$12,000</span>
          <span> {outputSuffix}</span>
        </div>
        <button class="bg-green-600 hover:bg-green-700 text-white font-bold py-3 px-8 rounded-lg transition duration-300 transform hover:scale-105">
          {ctaText}
        </button>
      </div>
    </div>

    <div class="text-center text-sm text-gray-500">
      <p>{disclaimer}</p>
    </div>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const monthlyVisitorsInput = document.getElementById('monthly-visitors')
const conversionRateInput = document.getElementById('conversion-rate')
const averageOrderValueInput = document.getElementById('average-order-value')
const monthlyVisitorsValue = document.getElementById('monthly-visitors-value')
const conversionRateValue = document.getElementById('conversion-rate-value')
const averageOrderValueValue = document.getElementById('average-order-value-value')
const roiValue = document.getElementById('roi-value');

      if (!monthlyVisitorsInput || !conversionRateInput || !averageOrderValueInput ||
          !monthlyVisitorsValue || !conversionRateValue || !averageOrderValueValue || !roiValue) return;

      function formatNumber(num) {
        return num.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
      }

      function calculateROI() {
        const visitors = parseInt(monthlyVisitorsInput.value)
const rate = parseFloat(conversionRateInput.value)
const value = parseInt(averageOrderValueInput.value);

        // Calculate current revenue
        const currentRevenue = (visitors * rate / 100) * value;

        // Calculate potential revenue with 2% lift
        const potentialRevenue = (visitors * (rate + 2) / 100) * value;

        // Calculate ROI
        const roi = potentialRevenue - currentRevenue;

        // Update display values
        monthlyVisitorsValue.textContent = formatNumber(visitors);
        conversionRateValue.textContent = rate.toFixed(1) + '%';
        averageOrderValueValue.textContent = '$' + formatNumber(value);
        roiValue.textContent = '$' + formatNumber(Math.round(roi));
      }

      // Add event listeners
      monthlyVisitorsInput.addEventListener('input', calculateROI);
      conversionRateInput.addEventListener('input', calculateROI);
      averageOrderValueInput.addEventListener('input', calculateROI);

      // Initial calculation
      calculateROI();
    });
  </script>
</section>