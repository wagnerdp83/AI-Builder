---

<section class="relative min-h-screen bg-gradient-to-br from-[#0A192F] via-[#0F2A4A] to-[#1E3A8A] overflow-hidden">
  <!-- Background geometric shapes -->
  <div class="absolute inset-0 opacity-10">
    <div class="absolute top-20 left-10 w-32 h-32 bg-blue-400 rounded-full blur-3xl"></div>
    <div class="absolute bottom-20 right-10 w-40 h-40 bg-orange-400 rounded-full blur-3xl"></div>
    <div class="absolute top-1/2 left-1/2 w-24 h-24 bg-blue-300 rounded-full blur-2xl"></div>
  </div>

  <div class="container mx-auto px-4 py-20 relative z-10">
    <div class="flex flex-col lg:flex-row items-center min-h-[80vh]">
      <!-- Left Content - Copy -->
      <div class="w-full lg:w-3/5 text-center lg:text-left mb-12 lg:mb-0">
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-6 leading-tight">
          {headline}
        </h1>
        <p class="text-xl md:text-2xl text-gray-300 mb-8 leading-relaxed max-w-2xl mx-auto lg:mx-0">
          {subheadline}
        </p>

        <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start mb-8">
          <a
            href="#join-waitlist"
            class="bg-[#FF6B35] hover:bg-[#E65A2C] text-white px-8 py-4 rounded-lg text-lg font-medium transition-all duration-300 transform hover:scale-105 hover:shadow-lg flex items-center justify-center group"
          >
            <span>{primaryCta}</span>
            <Star class="ml-2 h-5 w-5 group-hover:rotate-12 transition-transform duration-300" />
          </a>
          <a
            href="#demo"
            class="border-2 border-blue-400 text-blue-400 hover:bg-blue-400 hover:text-white px-8 py-4 rounded-lg text-lg font-medium transition-all duration-300 flex items-center justify-center group"
          >
            <Play class="mr-2 h-5 w-5 group-hover:scale-110 transition-transform duration-300" />
            <span>{secondaryLink}</span>
          </a>
        </div>

        <!-- Trust badges -->
        <div class="flex flex-col sm:flex-row items-center justify-center lg:justify-start space-y-4 sm:space-y-0 sm:space-x-6">
          <div class="flex items-center space-x-2 text-gray-300">
            <Globe class="h-5 w-5 text-blue-400" />
            <span class="text-sm">{trustText}</span>
          </div>
          <div class="flex items-center space-x-2">
            {countries.map((country) => (
              <span class="text-2xl" title={country.name}>{country.flag}</span>
            ))}
          </div>
        </div>
      </div>

      <!-- Right Content - Video -->
      <div class="w-full lg:w-2/5 flex justify-center">
        <div class="relative w-full max-w-md">
          <div class="relative bg-white/10 backdrop-blur-sm rounded-2xl p-4 border border-white/20 shadow-2xl">
            <video
              src={videoUrl}
              autoplay
              loop
              muted
              playsinline
              class="w-full rounded-xl shadow-2xl"
              aria-label={videoAlt}
            ></video>
            <!-- Play button overlay -->
            <div class="absolute inset-0 flex items-center justify-center">
              <div class="bg-[#FF6B35] rounded-full p-4 shadow-lg">
                <Play class="h-8 w-8 text-white fill-current" />
              </div>
            </div>
          </div>
          
          <!-- Floating stats -->
          <div class="absolute -bottom-4 -right-4 bg-white rounded-lg p-3 shadow-lg">
            <div class="text-center">
              <div class="text-2xl font-bold text-[#0A192F]">30s</div>
              <div class="text-xs text-gray-600">Generation</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  // Hero animations
  document.addEventListener('DOMContentLoaded', () => {
    const heroContent = document.querySelector('.relative.z-10');
    const ctaButton = document.querySelector('.bg-\\[\\#FF6B35\\]');
    
    if (!heroContent || !ctaButton) {
      console.warn('Hero elements not found, skipping animations');
      return;
    }

    // Fade in animation
    heroContent.style.opacity = '0';
    heroContent.style.transform = 'translateY(20px)';
    heroContent.style.transition = 'opacity 0.8s ease, transform 0.8s ease';

    setTimeout(() => {
      if (heroContent) {
        heroContent.style.opacity = '1';
        heroContent.style.transform = 'translateY(0)';
      }
    }, 200);

    // CTA button pulse animation
    setTimeout(() => {
      if (ctaButton) {
        ctaButton.style.transform = 'scale(1.05)';
        setTimeout(() => {
          if (ctaButton) {
            ctaButton.style.transform = 'scale(1)';
          }
        }, 300);
      }
    }, 2000);

    // Button hover effects
    ctaButton.addEventListener('mouseenter', () => {
      ctaButton.style.boxShadow = '0 8px 25px rgba(255, 107, 53, 0.3)';
    });

    ctaButton.addEventListener('mouseleave', () => {
      ctaButton.style.boxShadow = 'none';
    });

    // Button click effect
    ctaButton.addEventListener('click', () => {
      ctaButton.style.transform = 'scale(0.95)';
      setTimeout(() => {
        if (ctaButton) {
          ctaButton.style.transform = 'scale(1)';
        }
      }, 100);
    });
  });
</script>