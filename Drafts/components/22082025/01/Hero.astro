---
// Hero Component for Logo Design Franchise Business
const headline = "Own a Profitable Logo & Branding Franchise in Colorado's Booming Creative Industry";
const subheadline = "Join a proven system with 90% franchisee satisfaction and scalable revenueâ€”backed by expert training and marketing support.";
const primaryCTA = "Get Franchise Info Now";
const secondaryCTA = "Download Your Free Franchise Guide";
const trustIndicator = "Rated #1 Creative Franchise in Colorado | 50+ Locations Nationwide";
const backgroundImage = "/images/hero-background.jpg";
---

<section class="relative min-h-screen flex items-center justify-center bg-gradient-to-r from-slate-900 to-blue-900 overflow-hidden">
  <!-- Background Image with Overlay -->
  <div class="absolute inset-0 z-0">
    <img src={backgroundImage} alt="Successful franchise owner designing a custom logo in a modern Colorado studio" class="w-full h-full object-cover opacity-30" />
    <div class="absolute inset-0 bg-slate-900 bg-opacity-70"></div>
  </div>
  
  <!-- Content Container -->
  <div class="relative z-10 max-w-6xl mx-auto px-6 text-center text-white">
    <h1 class="text-5xl md:text-6xl lg:text-7xl font-bold leading-tight mb-6 text-center">
      {headline}
    </h1>
    
    <p class="text-xl md:text-2xl font-medium mb-8 max-w-4xl mx-auto leading-relaxed text-center">
      {subheadline}
    </p>
    
    <!-- Trust Indicator -->
    {trustIndicator && (
      <div class="mb-8">
        <p class="text-lg text-blue-200 font-medium">
          {trustIndicator}
        </p>
      </div>
    )}
    
    <!-- CTA Buttons -->
    <div class="flex flex-col sm:flex-row gap-6 justify-center items-center mb-12">
      <button class="bg-blue-600 hover:bg-blue-700 text-white px-10 py-5 rounded-xl font-bold text-xl transition-all duration-300 transform hover:scale-105 shadow-2xl">
        {primaryCTA}
      </button>
      
      <a href="#learn-more" class="text-white border-2 border-white px-8 py-4 rounded-xl font-semibold text-lg hover:bg-white hover:text-slate-900 transition-all duration-300 transform hover:scale-105">
        {secondaryCTA}
      </a>
    </div>
    
    <!-- Additional Trust Elements -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-4xl mx-auto">
      <div class="text-center">
        <div class="w-16 h-16 bg-blue-600 bg-opacity-20 rounded-full flex items-center justify-center mx-auto mb-4">
          <svg class="w-8 h-8 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
        <h3 class="text-lg font-semibold mb-2">Proven System</h3>
        <p class="text-blue-200">90% franchisee satisfaction rate</p>
      </div>
      
      <div class="text-center">
        <div class="w-16 h-16 bg-blue-600 bg-opacity-20 rounded-full flex items-center justify-center mx-auto mb-4">
          <svg class="w-8 h-8 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
          </svg>
        </div>
        <h3 class="text-lg font-semibold mb-2">Fast Growth</h3>
        <p class="text-blue-200">Scalable revenue model</p>
      </div>
      
      <div class="text-center">
        <div class="w-16 h-16 bg-blue-600 bg-opacity-20 rounded-full flex items-center justify-center mx-auto mb-4">
          <svg class="w-8 h-8 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 100 4m-6 8a2 2 0 100-4m0 4a2 2 0 100-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 100-4m0 4v2"></path>
          </svg>
        </div>
        <h3 class="text-lg font-semibold mb-2">Expert Support</h3>
        <p class="text-blue-200">Training & marketing included</p>
      </div>
    </div>
  </div>
  
  <!-- Scroll Indicator -->
  <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 z-10">
    <div class="w-6 h-10 border-2 border-white rounded-full flex justify-center">
      <div class="w-1 h-3 bg-white rounded-full mt-2 animate-bounce"></div>
    </div>
  </div>
</section>