---
// Footer Component for Logo Design Franchise Business
const brandName = "Logo Design Franchise";
const currentYear = new Date().getFullYear();
const quickLinks = [
  { text: "Home", href: "#home" },
  { text: "Franchise Info", href: "#franchise" },
  { text: "Investment", href: "#investment" },
  { text: "Support", href: "#support" },
  { text: "Contact", href: "#contact" }
];
const socialLinks = [
  { name: "Facebook", href: "#", icon: "facebook" },
  { name: "Twitter", href: "#", icon: "twitter" },
  { name: "Instagram", href: "#", icon: "instagram" },
  { name: "LinkedIn", href: "#", icon: "linkedin" }
];
---

<footer class="bg-slate-900 text-white">
  <div class="max-w-7xl mx-auto px-6 py-12">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      <!-- Company Info -->
      <div class="col-span-1 md:col-span-2">
        <h3 class="text-2xl font-bold text-blue-400 mb-4">{brandName}</h3>
        <p class="text-slate-300 mb-4 max-w-md">
          Join Colorado's leading logo design and branding franchise. We help entrepreneurs build profitable creative businesses with proven systems, expert training, and ongoing support.
        </p>
        <div class="flex space-x-4">
          {socialLinks.map(social => (
            <a href={social.href} class="text-slate-400 hover:text-blue-400 transition-colors duration-200">
              <span class="sr-only">{social.name}</span>
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M24 4.557c-.883.392-1.832.656-2.828.775 1.017-.609 1.798-1.574 2.165-2.724-.951.564-2.005.974-3.127 1.195-.897-.957-2.178-1.555-3.594-1.555-3.179 0-5.515 2.966-4.797 6.045-4.091-.205-7.719-2.165-10.148-5.144-1.29 2.213-.669 5.108 1.523 6.574-.806-.026-1.566-.247-2.229-.616-.054 2.281 1.581 4.415 3.949 4.89-.693.188-1.452.232-2.224.084.626 1.956 2.444 3.379 4.6 3.419-2.07 1.623-4.678 2.348-7.29 2.04 2.179 1.397 4.768 2.212 7.548 2.212 9.142 0 14.307-7.721 13.995-14.646.962-.695 1.797-1.562 2.457-2.549z"/>
              </svg>
            </a>
          ))}
        </div>
      </div>
      
      <!-- Quick Links -->
      <div>
        <h4 class="text-lg font-semibold mb-4">Quick Links</h4>
        <ul class="space-y-2">
          {quickLinks.map(link => (
            <li>
              <a href={link.href} class="text-slate-300 hover:text-blue-400 transition-colors duration-200">
                {link.text}
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      <!-- Contact Info -->
      <div>
        <h4 class="text-lg font-semibold mb-4">Contact</h4>
        <div class="space-y-2 text-slate-300">
          <p>123 Colorado Business Ave</p>
          <p>Denver, Colorado 80202</p>
          <p>Phone: (555) 123-4567</p>
          <p>Email: franchise@logodesign.com</p>
        </div>
      </div>
    </div>
    
    <!-- Bottom Bar -->
    <div class="border-t border-slate-800 mt-8 pt-8 text-center text-slate-400">
      <p>&copy; {currentYear} {brandName}. All rights reserved.</p>
    </div>
  </div>
</footer>