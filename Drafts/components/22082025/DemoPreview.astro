---
import { Sparkles, Loader2, Eye } from '@lucide/astro';

const headline = "See FoxFreela in Action.";
const subheadline = "Type a prompt below. We'll generate a preview in seconds (no email needed).";
const generateButtonText = "Show Me a Preview";
const disclaimer = "*Previews are simplified demos. Full features available on launch.";

const placeholderExamples = [
  "Lead gen page for a freelance UX designer in London",
  "Webinar signup for a digital marketing agency",
  "Portfolio showcase for a creative photographer",
  "Service page for a consulting business"
];

const samplePreview = {
  title: "Acme Design Studio",
  description: "Professional design services for modern businesses",
  features: ["UI/UX Design", "Brand Identity", "Web Development"],
  cta: "Get Started"
};
---

<section id="demo" class="py-20 bg-gray-50">
  <div class="container mx-auto px-4">
    <div class="max-w-4xl mx-auto text-center">
      <h2 class="text-3xl md:text-4xl font-bold text-[#0A192F] mb-4">
        {headline}
      </h2>
      <p class="text-xl text-gray-600 mb-12 max-w-2xl mx-auto">
        {subheadline}
      </p>

      <div class="grid lg:grid-cols-2 gap-8 items-start">
        <!-- Input Section -->
        <div class="bg-white rounded-2xl p-8 shadow-lg border border-gray-200">
          <div class="text-left mb-6">
            <h3 class="text-xl font-semibold text-[#0A192F] mb-2">Describe Your Goal</h3>
            <p class="text-gray-600 text-sm">Be specific about your business and what you want to achieve</p>
          </div>

          <div class="space-y-4">
            <div class="relative">
              <textarea
                id="prompt-input"
                placeholder="e.g., Landing page for a yoga studio in Berlin that offers online classes and wellness retreats"
                class="w-full h-32 p-4 border-2 border-gray-200 rounded-lg resize-none focus:border-blue-400 focus:ring-2 focus:ring-blue-100 transition-all duration-300 text-left"
                rows="4"
              ></textarea>
              <div class="absolute top-2 right-2 text-gray-400">
                <Sparkles class="h-5 w-5" />
              </div>
            </div>

            <!-- Placeholder examples -->
            <div class="text-left">
              <p class="text-sm text-gray-500 mb-2">Try these examples:</p>
              <div class="space-y-1">
                {placeholderExamples.map((example) => (
                  <button
                    class="block w-full text-left text-sm text-blue-600 hover:text-blue-800 hover:bg-blue-50 p-2 rounded transition-colors duration-200"
                    onclick={`document.getElementById('prompt-input').value = '${example}'`}
                  >
                    {example}
                  </button>
                ))}
              </div>
            </div>

            <button
              id="generate-btn"
              class="w-full bg-blue-500 hover:bg-blue-600 text-white py-3 px-6 rounded-lg font-medium transition-all duration-300 transform hover:scale-105 hover:shadow-lg flex items-center justify-center space-x-2"
            >
              <span>{generateButtonText}</span>
              <Eye class="h-5 w-5" />
            </button>
          </div>

          <p class="text-xs text-gray-500 mt-4 text-center">
            {disclaimer}
          </p>
        </div>

        <!-- Preview Section -->
        <div class="bg-white rounded-2xl p-8 shadow-lg border border-gray-200">
          <div class="text-left mb-6">
            <h3 class="text-xl font-semibold text-[#0A192F] mb-2">Generated Preview</h3>
            <p class="text-gray-600 text-sm">Your AI-generated landing page preview</p>
          </div>

          <!-- Loading State -->
          <div id="loading-state" class="hidden">
            <div class="flex flex-col items-center justify-center py-12">
              <Loader2 class="h-12 w-12 text-[#FF6B35] animate-spin mb-4" />
              <p class="text-gray-600">Generating your preview...</p>
              <div class="mt-4 w-full bg-gray-200 rounded-full h-2">
                <div class="bg-[#FF6B35] h-2 rounded-full animate-pulse" style="width: 60%"></div>
              </div>
            </div>
          </div>

          <!-- Preview Content -->
          <div id="preview-content" class="hidden">
            <div class="border-2 border-gray-200 rounded-lg p-6 bg-gradient-to-br from-blue-50 to-indigo-50">
              <!-- Preview Header -->
              <div class="text-center mb-6">
                <h4 class="text-2xl font-bold text-[#0A192F] mb-2">{samplePreview.title}</h4>
                <p class="text-gray-600">{samplePreview.description}</p>
              </div>

              <!-- Preview Features -->
              <div class="grid grid-cols-1 gap-3 mb-6">
                {samplePreview.features.map((feature) => (
                  <div class="flex items-center space-x-3 p-3 bg-white rounded-lg border border-gray-100">
                    <div class="w-2 h-2 bg-[#FF6B35] rounded-full"></div>
                    <span class="text-gray-700">{feature}</span>
                  </div>
                ))}
              </div>

              <!-- Preview CTA -->
              <div class="text-center">
                <button class="bg-[#FF6B35] hover:bg-[#E65A2C] text-white px-6 py-3 rounded-lg font-medium transition-all duration-300 transform hover:scale-105">
                  {samplePreview.cta}
                </button>
              </div>
            </div>

            <!-- Preview Stats -->
            <div class="mt-6 grid grid-cols-3 gap-4 text-center">
              <div class="bg-blue-50 rounded-lg p-3">
                <div class="text-lg font-bold text-blue-600">2.3s</div>
                <div class="text-xs text-gray-600">Generation</div>
              </div>
              <div class="bg-green-50 rounded-lg p-3">
                <div class="text-lg font-bold text-green-600">98%</div>
                <div class="text-xs text-gray-600">Accuracy</div>
              </div>
              <div class="bg-orange-50 rounded-lg p-3">
                <div class="text-lg font-bold text-orange-600">3</div>
                <div class="text-xs text-gray-600">Variants</div>
              </div>
            </div>
          </div>

          <!-- Initial State -->
          <div id="initial-state" class="text-center py-12">
            <div class="w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <Eye class="h-8 w-8 text-gray-400" />
            </div>
            <p class="text-gray-500">Enter a prompt to see your preview</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const promptInput = document.getElementById('prompt-input');
    const generateBtn = document.getElementById('generate-btn');
    const loadingState = document.getElementById('loading-state');
    const previewContent = document.getElementById('preview-content');
    const initialState = document.getElementById('initial-state');

    if (!promptInput || !generateBtn || !loadingState || !previewContent || !initialState) {
      console.warn('Demo preview elements not found');
      return;
    }

    // Input focus effects
    promptInput.addEventListener('focus', () => {
      promptInput.style.boxShadow = '0 0 0 3px rgba(59, 130, 246, 0.1)';
    });

    promptInput.addEventListener('blur', () => {
      promptInput.style.boxShadow = 'none';
    });

    // Generate button click
    generateBtn.addEventListener('click', async () => {
      const prompt = promptInput.value.trim();
      
      if (!prompt) {
        promptInput.style.borderColor = '#ef4444';
        promptInput.style.boxShadow = '0 0 0 3px rgba(239, 68, 68, 0.1)';
        setTimeout(() => {
          promptInput.style.borderColor = '#e5e7eb';
          promptInput.style.boxShadow = 'none';
        }, 2000);
        return;
      }

      // Show loading state
      initialState.classList.add('hidden');
      loadingState.classList.remove('hidden');
      previewContent.classList.add('hidden');
      
      generateBtn.disabled = true;
      generateBtn.innerHTML = '<Loader2 class="h-5 w-5 animate-spin" /> Generating...';

      // Simulate AI generation
      setTimeout(() => {
        // Hide loading, show preview
        loadingState.classList.add('hidden');
        previewContent.classList.remove('hidden');
        
        // Reset button
        generateBtn.disabled = false;
        generateBtn.innerHTML = '<span>Show Me a Preview</span><Eye class="h-5 w-5" />';
        
        // Add success animation
        generateBtn.classList.add('bg-green-500');
        setTimeout(() => {
          generateBtn.classList.remove('bg-green-500');
        }, 2000);
      }, 3000);
    });

    // Button hover effects
    generateBtn.addEventListener('mouseenter', () => {
      generateBtn.style.transform = 'scale(1.02)';
    });

    generateBtn.addEventListener('mouseleave', () => {
      generateBtn.style.transform = 'scale(1)';
    });

    // Button click effect
    generateBtn.addEventListener('click', () => {
      generateBtn.style.transform = 'scale(0.98)';
      setTimeout(() => {
        generateBtn.style.transform = 'scale(1)';
      }, 100);
    });
  });
</script>
