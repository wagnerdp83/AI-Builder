---
import { ArrowUp, Instagram, Linkedin, Facebook, Star } from '@lucide/astro';

const footerContent = {
  logo: {
    alt: "FoxFreela Logo",
    src: "{{LOGO_IMAGE}}"
  },
  navigation: [
    { text: "How It Works", href: "#how-it-works" },
    { text: "Why FoxFreela", href: "#why-foxfreela" },
    { text: "Join Waitlist", href: "#join-waitlist" }
  ],
  socialLinks: [
    { icon: Instagram, href: "#", ariaLabel: "Instagram" },
    { icon: Linkedin, href: "#", ariaLabel: "LinkedIn" },
    { icon: Facebook, href: "#", ariaLabel: "Facebook" }
  ],
  copyright: "Â© 2024 FoxFreela. Made in Germany, loved worldwide.",
  waitlistCTA: {
    text: "Ready to launch faster? Join the Waitlist",
    href: "#join-waitlist"
  }
};
---

<footer class="bg-navy-900 text-white py-12 bg-gray-50">
  <div class="container mx-auto px-4">
    <div class="flex flex-col md:flex-row justify-between items-center mb-8">
      <div class="mb-6 md:mb-0">
        <img
          src={footerContent.logo.src}
          alt={footerContent.logo.alt}
          class="h-8 w-auto"
        />
      </div>

      <nav class="flex flex-wrap justify-center gap-6 mb-6 md:mb-0">
        {footerContent.navigation.map((item) => (
          <a
            href={item.href}
            class="text-blue-400 hover:text-blue-300 transition-colors duration-200"
          >
            {item.text}
          </a>
        ))}
      </nav>

      <div class="flex gap-4">
        {footerContent.socialLinks.map((link) => (
          <a
            href={link.href}
            aria-label={link.ariaLabel}
            class="text-gold-500 hover:text-gold-400 transition-colors duration-200"
          >
            <link.icon class="h-6 w-6" />
          </a>
        ))}
      </div>
    </div>

    <div class="border-t border-navy-700 pt-8 flex flex-col md:flex-row justify-between items-center">
      <p class="text-sm text-navy-300 mb-4 md:mb-0">
        {footerContent.copyright}
      </p>

      <a
        href="#"
        class="text-blue-400 hover:text-blue-300 transition-colors duration-200 flex items-center gap-2"
      >
        <ArrowUp class="h-4 w-4" />
        {footerContent.waitlistCTA.text}
      </a>
    </div>
  </div>
</footer>