---
import { Eye, Heart, Star } from '@lucide/astro';

const {
  headline = "Premium Medical Instruments",
  subheadline = "Discover our high-quality medical equipment for professionals",
  ctaText = "Shop Now",
  products = [
    {
      id: 1,
      name: "Surgical Scalpel",
      price: "$49.99",
      image: "https://images.unsplash.com/photo-1610565463065-62a684aea256?crop=entropy&cs=tinysrgb&fit=max&fm=jpg&ixid=M3w3NjU0MzV8MHwxfHNlYXJjaHwyfHxjbGVhbiUyQyUyMHNob3djYXNlJTIwaW1hZ2V8ZW58MHwwfHx8MTc1NTc2NjI4NXww&ixlib=rb-4.1.0&q=80&w=1080",
      description: "Precision surgical tool for delicate procedures"
    },
    {
      id: 2,
      name: "Sterilization Pack",
      price: "$29.99",
      image: "https://images.unsplash.com/photo-1610565463065-62a684aea256?crop=entropy&cs=tinysrgb&fit=max&fm=jpg&ixid=M3w3NjU0MzV8MHwxfHNlYXJjaHwyfHxjbGVhbiUyQyUyMHNob3djYXNlJTIwaW1hZ2V8ZW58MHwwfHx8MTc1NTc2NjI4NXww&ixlib=rb-4.1.0&q=80&w=1080",
      description: "Complete sterilization kit for medical professionals"
    },
    {
      id: 3,
      name: "Medical Stethoscope",
      price: "$39.99",
      image: "https://images.unsplash.com/photo-1610565463065-62a684aea256?crop=entropy&cs=tinysrgb&fit=max&fm=jpg&ixid=M3w3NjU0MzV8MHwxfHNlYXJjaHwyfHxjbGVhbiUyQyUyMHNob3djYXNlJTIwaW1hZ2V8ZW58MHwwfHx8MTc1NTc2NjI4NXww&ixlib=rb-4.1.0&q=80&w=1080",
      description: "High-quality stethoscope with 30dB amplification"
    },
    {
      id: 4,
      name: "Surgical Gloves",
      price: "$14.99",
      image: "https://images.unsplash.com/photo-1610565463065-62a684aea256?crop=entropy&cs=tinysrgb&fit=max&fm=jpg&ixid=M3w3NjU0MzV8MHwxfHNlYXJjaHwyfHxjbGVhbiUyQyUyMHNob3djYXNlJTIwaW1hZ2V8ZW58MHwwfHx8MTc1NTc2NjI4NXww&ixlib=rb-4.1.0&q=80&w=1080",
      description: "Nitrile examination gloves, size medium"
    }
  ],
  videoUrl = "https://videos.pexels.com/video-files/6998087/6998087-hd_1280_720_25fps.mp4",
  galleryImages = [
    "https://images.unsplash.com/photo-1610565463065-62a684aea256?crop=entropy&cs=tinysrgb&fit=max&fm=jpg&ixid=M3w3NjU0MzV8MHwxfHNlYXJjaHwyfHxjbGVhbiUyQyUyMHNob3djYXNlJTIwaW1hZ2V8ZW58MHwwfHx8MTc1NTc2NjI4NXww&ixlib=rb-4.1.0&q=80&w=1080",
    "https://images.unsplash.com/photo-1610565463065-62a684aea256?crop=entropy&cs=tinysrgb&fit=max&fm=jpg&ixid=M3w3NjU0MzV8MHwxfHNlYXJjaHwyfHxjbGVhbiUyQyUyMHNob3djYXNlJTIwaW1hZ2V8ZW58MHwwfHx8MTc1NTc2NjI4NXww&ixlib=rb-4.1.0&q=80&w=1080",
    "https://images.unsplash.com/photo-1610565463065-62a684aea256?crop=entropy&cs=tinysrgb&fit=max&fm=jpg&ixid=M3w3NjU0MzV8MHwxfHNlYXJjaHwyfHxjbGVhbiUyQyUyMHNob3djYXNlJTIwaW1hZ2V8ZW58MHwwfHx8MTc1NTc2NjI4NXww&ixlib=rb-4.1.0&q=80&w=1080",
    "https://images.unsplash.com/photo-1610565463065-62a684aea256?crop=entropy&cs=tinysrgb&fit=max&fm=jpg&ixid=M3w3NjU0MzV8MHwxfHNlYXJjaHwyfHxjbGVhbiUyQyUyMHNob3djYXNlJTIwaW1hZ2V8ZW58MHwwfHx8MTc1NTc2NjI4NXww&ixlib=rb-4.1.0&q=80&w=1080"
  ]
} = Astro.props;
---

<section class="relative overflow-hidden">
  <!-- Background Video -->
  <div class="absolute inset-0 z-0">
    <video
      autoplay
      loop
      muted
      playsinline
      class="w-full h-full object-cover"
    >
      <source src={videoUrl} type="video/mp4" />
      Your browser does not support the video tag.
    </video>
    <div class="absolute inset-0 bg-black/50"></div>
  </div>

  <!-- Hero Content -->
  <div class="relative z-10 container mx-auto px-4 py-20 md:py-32 lg:py-40">
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 items-center">
      <!-- Left Column - Products -->
      <div class="lg:col-span-1">
        <h1 class="text-4xl md:text-5xl font-bold text-white mb-4">{headline}</h1>
        <p class="text-xl text-gray-200 mb-8">{subheadline}</p>
        <a
          href="#"
          class="inline-block bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-6 rounded-lg transition duration-300 transform hover:scale-105"
        >
          {ctaText}
        </a>
      </div>

      <!-- Middle Column - Featured Products -->
      <div class="lg:col-span-1 grid grid-cols-2 gap-4">
        {products.slice(0, 4).map((product) => (
          <div  class="bg-white/90 rounded-lg overflow-hidden shadow-lg hover:shadow-xl transition duration-300">
            <img
              src={product.image}
              alt={product.name}
              class="w-full h-48 object-cover"
            />
            <div class="p-4">
              <h3 class="font-bold text-lg mb-1">{product.name}</h3>
              <p class="text-gray-600 text-sm mb-2">{product.description}</p>
              <div class="flex justify-between items-center">
                <span class="font-bold text-blue-600">{product.price}</span>
                <button class="text-blue-600 hover:text-blue-800 transition duration-300">
                  <Eye class="w-5 h-5" />
                </button>
              </div>
            </div>
          </div>
        ))}
      </div>

      <!-- Right Column - Interactive Widget -->
      <div class="lg:col-span-1 bg-white/90 rounded-lg p-6 shadow-lg">
        <h2 class="text-2xl font-bold mb-4 text-gray-800">Quick Product Compare</h2>
        <div class="space-y-4">
          {products.slice(0, 3).map((product) => (
            <div  class="flex items-center space-x-4 p-2 hover:bg-gray-100 rounded transition duration-300">
              <img
                src={product.image}
                alt={product.name}
                class="w-16 h-16 object-cover rounded"
              />
              <div>
                <h3 class="font-bold">{product.name}</h3>
                <p class="text-sm text-gray-600">{product.price}</p>
              </div>
              <button class="ml-auto text-blue-600 hover:text-blue-800 transition duration-300">
                <Heart class="w-5 h-5" />
              </button>
            </div>
          ))}
        </div>
        <button class="mt-6 w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-lg transition duration-300 transform hover:scale-105">
          Compare Selected
        </button>
      </div>
    </div>

    <!-- Image Gallery -->
    <div class="mt-12 grid grid-cols-2 md:grid-cols-4 gap-4">
      {galleryImages.map((image, index) => (
        <div  class="relative group">
          <img
            src={image}
            alt={`Medical instrument ${index + 1}`}
            class="w-full h-40 object-cover rounded-lg"
          />
          <div class="absolute inset-0 bg-black/30 opacity-0 group-hover:opacity-100 transition duration-300 rounded-lg flex items-center justify-center">
            <button class="text-white bg-blue-600 hover:bg-blue-700 rounded-full p-2 transition duration-300">
              <Eye class="w-5 h-5" />
            </button>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>