---

<section class="py-12 bg-gray-50">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold text-center text-gray-800 mb-8">Best-Selling Medical Instruments</h2>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
      {products.map((product, index) => (
        <div  class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow duration-300">
          <div class="relative">
            <img src={product.image} alt={product.name} class="w-full h-48 object-cover" />
            <button class="absolute top-2 right-2 bg-white p-1 rounded-full shadow-md hover:bg-gray-100" aria-label="Compare products">
              <Info class="w-5 h-5 text-blue-600" />
            </button>
          </div>
          <div class="p-4">
            <h3 class="text-lg font-semibold text-gray-800 mb-2">{product.name}</h3>
            <p class="text-gray-600 text-sm mb-3">{product.description}</p>
            <div class="flex justify-between items-center mb-4">
              <span class="text-xl font-bold text-blue-600">{product.price}</span>
              <button class="bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700 transition-colors duration-300">
                Add to Cart
              </button>
            </div>
          </div>

          {index < products.length - 1 && index % 2 === 1 && (
            <div class="px-4 pb-4">
              <video
                src={videos[index % videos.length]}
                class="w-full rounded-md"
                controls
                muted
                loop
                playsinline
              />
            </div>
          )}
        </div>
      ))}
    </div>
  </div>
</section>