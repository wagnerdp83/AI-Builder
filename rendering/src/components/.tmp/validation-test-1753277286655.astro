---
const menuItems = [
  { name: 'Home', href: '#' },
  { name: 'About', href: '#about' },
  { name: 'Testimonials', href: '#testimonials' },
  { name: 'Pricing', href: '#pricing' },
  { name: 'Contact', href: '#contact' },
];
---

<nav class="menu">
  <ul>
    {menuItems.map((item) => (
      <li>
        <a href={item.href}>{item.name}</a>
      </li>
    ))}
  </ul>
</nav>

<style>
  .menu {
    background-color: #333;
    padding: 1rem;
  }
  .menu ul {
    list-style: none;
    display: flex;
    justify-content: space-around;
    margin: 0;
    padding: 0;
  }
  .menu ul li {
    margin: 0 1rem;
  }
  .menu ul li a {
    color: white;
    text-decoration: none;
    font-size: 1.2rem;
  }
  .menu ul li a:hover {
    text-decoration: underline;
  }
</style>