---
const partners = [
  { name: "Partner 1", logo: "/path/to/partner1-logo.png", href: "#partner1" },
  { name: "Partner 2", logo: "/path/to/partner2-logo.png", href: "#partner2" },
  { name: "Partner 3", logo: "/path/to/partner3-logo.png", href: "#partner3" },
  { name: "Partner 4", logo: "/path/to/partner4-logo.png", href: "#partner4" }
];

const heading = "Our Partners";
---
<section class="py-12 bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="text-3xl font-extrabold text-gray-900 text-center mb-8">{heading}</h2>
    <div class="grid grid-cols-2 gap-8 md:grid-cols-4">
      {partners.map(partner => (
        <a href={partner.href} class="flex items-center justify-center bg-white p-6 rounded-lg shadow-md hover:shadow-lg transition-shadow duration-300">
          <img src={partner.logo} alt={partner.name} class="h-16 w-auto" />
        </a>
      ))}
    </div>
  </div>
</section>
---