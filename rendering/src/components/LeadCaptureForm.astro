---
import { Calendar, Star } from '@lucide/astro';

const headline = 'Orlando’s Finest Luxury Homes | Your Legacy Starts Here'
const subheadline = 'Exclusive waterfront estates, private golf communities, and high-ROI investment properties in Lake Nona, Windermere, and Dr. Phillips. Download our 2024 Insider’s Market Guide to discover hidden opportunities.'
const primaryCTA = 'Get Your Free Market Guide'
const secondaryCTA = 'Or call (XXX) XXX-XXXX for a private consultation'
const trustSignal = 'Trusted by 200+ Orlando families and investors | $500M+ in luxury properties sold.'
const formFields = {
  name: 'Name',
  email: 'Email',
  phone: 'Phone (optional)',
  interest: 'Interest'
}
const interestOptions = ['Primary Residence', 'Investment Property']
const submitButton = 'Unlock Your Guide Now'
const copyrightText = '© 2024 [Your Business Name]. All rights reserved. Serving Orlando’s luxury real estate market.';
---

<section class="bg-gray-900 text-white py-16 px-4 sm:px-6 lg:px-8">
  <div class="max-w-7xl mx-auto">
    <div class="text-center mb-12">
      <h1 class="text-4xl font-bold mb-4 animate-fade-in">{headline}</h1>
      <p class="text-xl mb-8 animate-fade-in animation-delay-200">{subheadline}</p>
      <div class="flex flex-col sm:flex-row justify-center gap-4">
        <a href="#" class="bg-blue-900 hover:bg-blue-800 text-white font-bold py-3 px-6 rounded-lg transition-all duration-300 transform hover:scale-105 hover:shadow-lg animate-pulse-once">
          {primaryCTA}
        </a>
        <a href="tel:XXX-XXX-XXXX" class="text-blue-400 hover:text-blue-300 font-medium flex items-center justify-center">
          <Calendar class="w-5 h-5 mr-2" /> {secondaryCTA}
        </a>
      </div>
      <p class="mt-6 text-gray-400">{trustSignal}</p>
    </div>

    <div class="max-w-md mx-auto bg-gray-800 p-8 rounded-lg shadow-xl">
      <form class="space-y-6">
        <div>
          <label for="name" class="block text-sm font-medium text-gray-300 mb-1">{formFields.name}</label>
          <input type="text" id="name" name="name" required class="w-full px-4 py-3 rounded-md bg-gray-700 border border-gray-600 focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50 transition-all duration-300" />
        </div>

        <div>
          <label for="email" class="block text-sm font-medium text-gray-300 mb-1">{formFields.email}</label>
          <input type="email" id="email" name="email" required class="w-full px-4 py-3 rounded-md bg-gray-700 border border-gray-600 focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50 transition-all duration-300" />
        </div>

        <div>
          <label for="phone" class="block text-sm font-medium text-gray-300 mb-1">{formFields.phone}</label>
          <input type="tel" id="phone" name="phone" class="w-full px-4 py-3 rounded-md bg-gray-700 border border-gray-600 focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50 transition-all duration-300" />
        </div>

        <div>
          <label for="interest" class="block text-sm font-medium text-gray-300 mb-1">{formFields.interest}</label>
          <select id="interest" name="interest" required class="w-full px-4 py-3 rounded-md bg-gray-700 border border-gray-600 focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50 transition-all duration-300">
            {interestOptions.map((option, index) => (
              <option  value={option.toLowerCase().replace(' ', '-')}>{option}</option>
            ))}
          </select>
        </div>

        <div>
          <button type="submit" class="w-full bg-blue-900 hover:bg-blue-800 text-white font-bold py-3 px-6 rounded-lg transition-all duration-300 transform hover:scale-105 hover:shadow-lg">
            {submitButton}
          </button>
        </div>
      </form>
    </div>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', () => {
      // CTA button pulse animation
      setTimeout(() => {
        const ctaButton = document.querySelector('.animate-pulse-once');
        if (ctaButton) {
          ctaButton.classList.add('animate-pulse');
          setTimeout(() => {
            ctaButton.classList.remove('animate-pulse');
          }, 1000);
        }
      }, 3000);

      // Form submission handler
      const form = document.querySelector('form');
      if (form) {
        form.addEventListener('submit', (e) => {
          e.preventDefault();
          // In a real implementation, you would handle the form submission here
          // For this example, we'll just redirect to a thank-you page
          window.location.href = '/thank-you';
        });
      }
    });
  </script>
</section>