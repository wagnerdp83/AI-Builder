---
import { ArrowUp, Instagram, Linkedin, Facebook, Star } from '@lucide/astro';

const businessName = "Luxury Estates Orlando"
const copyrightYear = new Date().getFullYear()
const navigationLinks = [
  { name: "Featured Listings", href: "#featured-listings" },
  { name: "Contact", href: "#contact" }
]
const socialMediaLinks = [
  { name: "Instagram", href: "https://instagram.com", icon: Instagram },
  { name: "LinkedIn", href: "https://linkedin.com", icon: Linkedin },
  { name: "Facebook", href: "https://facebook.com", icon: Facebook }
];
---

<footer class="bg-navy-900 text-white py-12">
  <div class="container mx-auto px-4">
    <!-- Logo -->
    <div class="flex justify-center mb-12">
      <img src = "{{LOGO_IMAGE}}" alt={`${businessName} Logo`} class="h-10" />
    </div>

    <!-- Navigation Links -->
    <div class="flex justify-center space-x-8 mb-12">
      {navigationLinks.map((link) => (
        <a
          href={link.href}
          class="text-gold hover:text-gold-200 transition-colors duration-300"
        >
          {link.name}
        </a>
      ))}
    </div>

    <!-- Social Media Icons -->
    <div class="flex justify-center space-x-6 mb-12">
      {socialMediaLinks.map((social) => (
        <a
          href={social.href}
          class="text-gold hover:text-gold-200 transition-colors duration-300"
          aria-label={social.name}
        >
          <social.icon class="h-6 w-6" />
        </a>
      ))}
    </div>

    <!-- Copyright -->
    <div class="text-center text-gray-400 mb-8">
      <p>Â© {copyrightYear} {businessName}. All rights reserved.</p>
    </div>

    <!-- Back to Top -->
    <div class="flex justify-center">
      <button
        class="text-gold hover:text-gold-200 transition-colors duration-300"
        aria-label="Back to top"
        onclick="window.scrollTo({ top: 0, behavior: 'smooth' })"
      >
        <ArrowUp class="h-6 w-6" />
      </button>
    </div>
  </div>
</footer>

<script>
  // Add smooth scrolling behavior for navigation links
  document.addEventListener('DOMContentLoaded', () => {
    const navLinks = document.querySelectorAll('a[href^="#"]');
    navLinks.forEach(link => {
      link.addEventListener('click', (e) => {
        e.preventDefault()
const targetId = link.getAttribute('href')
const targetElement = document.querySelector(targetId);
        if (targetElement) {
          targetElement.scrollIntoView({
            behavior: 'smooth'
          });
        }
      });
    });
  });
</script>