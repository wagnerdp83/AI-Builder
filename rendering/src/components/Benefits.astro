---
import { MapPin, House, Handshake, Clock, Star } from '@lucide/astro';

const benefits = [
  {
    icon: House,
    title: "Verified Listings",
    description: "All our properties are thoroughly inspected and verified for authenticity."
  },
  {
    icon: MapPin,
    title: "Local Market Expertise",
    description: "Our agents have in-depth knowledge of the local real estate market."
  },
  {
    icon: Handshake,
    title: "Fast Closing Process",
    description: "We streamline the process to get you into your new home quickly."
  },
  {
    icon: Clock,
    title: "Flexible Financing",
    description: "We offer various financing options to suit your needs."
  }
]
const videoSnippets = [
  {
    url: "https://videos.pexels.com/video-files/32578518/13891791_640_360_24fps.mp4",
    alt: "Agent showing a property"
  },
  {
    url: "https://videos.pexels.com/video-files/32578518/13891791_640_360_24fps.mp4",
    alt: "Signing contracts"
  }
]
const galleryImages = [
  "https://images.unsplash.com/photo-1712668403347-5f545a07245c?crop=entropy&cs=tinysrgb&fit=max&fm=jpg&ixid=M3w3NjU0MzV8MHwxfHNlYXJjaHwzfHxtb2Rlcm4lMkMlMjBzaG93Y2FzZSUyMGltYWdlfGVufDB8MHx8fDE3NTU1NDgzMzF8MA&ixlib=rb-4.1.0&q=80&w=1080",
  "https://images.unsplash.com/photo-1712668403347-5f545a07245c?crop=entropy&cs=tinysrgb&fit=max&fm=jpg&ixid=M3w3NjU0MzV8MHwxfHNlYXJjaHwzfHxtb2Rlcm4lMkMlMjBzaG93Y2FzZSUyMGltYWdlfGVufDB8MHx8fDE3NTU1NDgzMzF8MA&ixlib=rb-4.1.0&q=80&w=1080",
  "https://images.unsplash.com/photo-1712668403347-5f545a07245c?crop=entropy&cs=tinysrgb&fit=max&fm=jpg&ixid=M3w3NjU0MzV8MHwxfHNlYXJjaHwzfHxtb2Rlcm4lMkMlMjBzaG93Y2FzZSUyMGltYWdlfGVufDB8MHx8fDE3NTU1NDgzMzF8MA&ixlib=rb-4.1.0&q=80&w=1080",
  "https://images.unsplash.com/photo-1712668403347-5f545a07245c?crop=entropy&cs=tinysrgb&fit=max&fm=jpg&ixid=M3w3NjU0MzV8MHwxfHNlYXJjaHwzfHxtb2Rlcm4lMkMlMjBzaG93Y2FzZSUyMGltYWdlfGVufDB8MHx8fDE3NTU1NDgzMzF8MA&ixlib=rb-4.1.0&q=80&w=1080"
];
---

<section class="py-16 bg-gray-50 bg-gray-100">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <div class="space-y-8">
        <div class="grid grid-cols-2 gap-4">
          {galleryImages.map((image, index) => (
            <div  class="aspect-square overflow-hidden rounded-lg">
              <img
                src={image}
                alt={`Property image ${index + 1}`}
                class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
              />
            </div>
          ))}
        </div>

        <div class="space-y-4">
          {videoSnippets.map((video, index) => (
            <div  class="aspect-video overflow-hidden rounded-lg">
              <video
                src={video.url}
                alt={video.alt}
                class="w-full h-full object-cover"
                autoplay
                loop
                muted
                playsinline
              />
            </div>
          ))}
        </div>
      </div>

      <div class="space-y-8">
        <h2 class="text-3xl font-bold text-blue-900">Why Choose Us?</h2>

        <div class="space-y-6">
          {benefits.map((benefit, index) => (
            <div  class="flex items-start space-x-4">
              <div class="flex-shrink-0 bg-blue-100 p-3 rounded-full">
                <benefit.icon class="w-6 h-6 text-blue-600" />
              </div>
              <div>
                <h3 class="text-xl font-semibold text-blue-900">{benefit.title}</h3>
                <p class="text-gray-600">{benefit.description}</p>
              </div>
            </div>
          ))}
        </div>

        <button class="inline-flex items-center px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors duration-300 shadow-md hover:shadow-lg">
          <MapPin class="w-5 h-5 mr-2" />
          Find Your Dream Home
        </button>
      </div>
    </div>
  </div>
</section>