---
import { ShieldCheck, Truck, Recycle, Star } from '@lucide/astro';

const {
  headline = "Pure Water, Delivered to Your Door",
  subheadline = "Fresh. Reliable. Affordable.",
  ctaText = "Schedule My Delivery",
  highlights = [
    { icon: ShieldCheck, text: "100% Purity Guaranteed" },
    { icon: Truck, text: "Free Delivery" },
    { icon: Recycle, text: "Eco-Friendly Packaging" }
  ],
  videoUrl = "https://videos.pexels.com/video-files/2236003/2236003-hd_1280_720_24fps.mp4"
} = Astro.props;
---

<section class="relative w-full h-screen overflow-hidden">
  <video
    class="absolute inset-0 w-full h-full object-cover"
    autoplay
    loop
    muted
    playsinline
  >
    <source src={videoUrl} type="video/mp4" />
    Your browser does not support the video tag.
  </video>

  <div class="absolute inset-0 bg-black bg-opacity-50"></div>

  <div class="relative z-10 flex flex-col items-center justify-center h-full px-4 text-center text-white">
    <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-4">{headline}</h1>
    <p class="text-xl md:text-2xl mb-8">{subheadline}</p>

    <div class="flex flex-wrap justify-center gap-8 mb-12">
      {highlights.map((highlight, index) => (
        <div  class="flex flex-col items-center max-w-xs">
          <highlight.icon class="w-12 h-12 mb-4" />
          <p class="text-lg">{highlight.text}</p>
        </div>
      ))}
    </div>

    <button class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-8 rounded-full text-lg transition duration-300">
      {ctaText}
    </button>
  </div>
</section>