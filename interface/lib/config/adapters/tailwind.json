{
  "styleSystem": "tailwind",
  "layout": {
    "container": {
      "default": "container mx-auto px-4",
      "wide": "max-w-7xl mx-auto px-4",
      "full": "w-full"
    }
  },
  "theme": {
    "fontFamilyMap": {
      "serif": "font-serif",
      "sans": "font-sans",
      "mono": "font-mono"
    },
    "backgroundDefault": "bg-gradient-to-br from-pink-50 to-purple-50",
    "heading": "text-gray-800",
    "body": "text-gray-600",
    "button": "bg-gradient-to-r from-pink-500 to-purple-600"
  }
}
