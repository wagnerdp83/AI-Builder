---
import { Scissors, Palette, Sparkles } from '@lucide/astro';

const items = [
  {
    "title": "Hair Styling",
    "icon": "Scissors",
    "price": "$50",
    "duration": "1 hour",
    "description": "Professional hair styling and cutting"
  },
  {
    "title": "Makeup",
    "icon": "Palette",
    "price": "$75",
    "duration": "1.5 hours",
    "description": "Full makeup application"
  },
  {
    "title": "Nail Art",
    "icon": "Sparkles",
    "price": "$35",
    "duration": "45 minutes",
    "description": "Creative nail design"
  }
];
const capabilitiesVersion = "1.0.0";
const title = "ServiceMenu";
const subtitle = "";
---

<section class="py-16 bg-gradient-to-br from-pink-50 to-purple-50">
  <div class="container mx-auto px-4">
    <h2 class="text-4xl font-serif text-gray-800 mb-4">{title}</h2>
    {subtitle && (<p class="text-xl font-serif text-gray-600 mb-8">{subtitle}</p>)}
    
    
    <div class="overflow-x-auto pb-4">
      <div class="flex space-x-8 min-w-max">
        {items.map((item) => (
          <div class="flex-shrink-0 w-80 bg-white rounded-lg shadow-lg overflow-hidden group">
            <div class="relative h-96">
              
              <img src={item.image || "{{MOCKUP_IMAGE}}"} alt={item.title || 'Gallery image'} class="w-full h-full object-cover" />
              
            </div>
            <div class="p-6">
              <p class="text-gray-800 font-serif">{item.title}</p>
              {item.description && (<p class="text-gray-600 font-serif mt-2">{item.description}</p>)}
            </div>
          </div>
        ))}
      </div>
    </div>
    <div class="flex items-center gap-4 mt-6 text-purple-600"><Scissors class="w-5 h-5" /> <Palette class="w-5 h-5" /> <Sparkles class="w-5 h-5" /></div>
    
  </div>
</section>
