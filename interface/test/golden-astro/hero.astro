---
import { Calendar, User } from '@lucide/astro';

const items = [];
const capabilitiesVersion = "1.0.0";
const title = "Hero";
const subtitle = "";
---

<section class="py-16 bg-gradient-to-br from-pink-50 to-purple-50">
  <div class="container mx-auto px-4">
    <h2 class="text-4xl font-serif text-gray-800 mb-4">{title}</h2>
    {subtitle && (<p class="text-xl font-serif text-gray-600 mb-8">{subtitle}</p>)}
    <p class="text-gray-600 font-serif">Book your appointment today</p>
    
    <div class="flex items-center gap-4 mt-6 text-purple-600"><Calendar class="w-5 h-5" /> <User class="w-5 h-5" /></div>
    
    <video class="w-full h-64 object-cover rounded-lg mt-8" muted playsinline loop preload="metadata">
      <source src="{{VIDEO_SRC}}" type="video/mp4" />
    </video>
  </div>
</section>
